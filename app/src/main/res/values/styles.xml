<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="def_sign_in_style">
        <item name="sign_in_bg_clor">@android:color/white</item>
        <item name="sign_in_pb_clor">@android:color/holo_orange_dark</item>
        <item name="sign_in_check_clor">@android:color/white</item>
        <item name="sign_in_text_clor">@android:color/holo_purple</item>
        <item name="sign_in_text_size">12sp</item>
    </style>

    <style name="def_waveline_style">
        <item name="wave_first_color">@color/colorPrimary</item>
        <item name="wave_second_color">@color/colorAccent</item>
        <item name="wave_line_width">2dp</item>
        <item name="wave_phase">45.0</item>
        <item name="wave_amplifier">60.0</item>
        <item name="wave_frequency">1.0</item>
    </style>


    <style name="def_dragview">
        <item name="seek_bg_color">#e6e6e6</item>
        <item name="seek_pb_color">#8ace00</item>
        <item name="seek_ball_solid_color">#ffffff</item>
        <item name="seek_ball_stroke_color">#e6e6e6</item>
        <item name="seek_text_color">#666666</item>
        <item name="seek_text_size">12sp</item>
    </style>

    <style name="def_switch_view">
        <item name="switch_bg_close_color">#666666</item>
        <item name="switch_bg_open_color">#8ace00</item>
        <item name="switch_strock_color">#e6e6e6</item>
        <item name="switch_ball_color">#ffffff</item>
        <item name="switch_ball_shadow_color">#ff00ee</item>
        <item name="switch_bg_strock_width">2dp</item>
    </style>

    <style name="def_countdown_circle_view">
        <item name="circle_bg_color">#90000000</item>
        <item name="circle_pb_color">#8ace00</item>
        <item name="circle_pb_width">1dp</item>
        <item name="circle_text_color">#ffffff</item>
        <item name="circle_text_size">12sp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <!-- 注意这两个属性一定要写，缺一不可，否则显示不出图片！ -->
    </style>


</resources>
